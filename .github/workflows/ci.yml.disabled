name: CI

on:
  push:
    branches: [main, develop]
  pull_request:
    branches: [main]

jobs:
  lint-and-format:
    name: Lint & Format
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Setup pnpm
        uses: pnpm/action-setup@v4
        with:
          version: 9

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: 22
          cache: pnpm

      - name: Install dependencies
        run: pnpm install --frozen-lockfile

      - name: Check formatting (Prettier)
        run: pnpm format:check

      - name: Lint (ESLint)
        run: pnpm lint

  build-web:
    name: Build Web
    runs-on: ubuntu-latest
    needs: lint-and-format

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Setup pnpm
        uses: pnpm/action-setup@v4
        with:
          version: 9

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: 22
          cache: pnpm

      - name: Install dependencies
        run: pnpm install --frozen-lockfile

      - name: Build Next.js
        run: pnpm -C apps/web build
        env:
          APP_URL: http://localhost:3000
          API_URL: http://localhost:4000

  test:
    name: Tests
    runs-on: ubuntu-latest
    needs: lint-and-format

    services:
      postgres:
        image: postgres:16
        env:
          POSTGRES_USER: acci_test
          POSTGRES_PASSWORD: acci_test_pass
          POSTGRES_DB: acci_test
        ports:
          - 5433:5432
        options: >-
          --health-cmd pg_isready
          --health-interval 10s
          --health-timeout 5s
          --health-retries 5

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Setup pnpm
        uses: pnpm/action-setup@v4
        with:
          version: 9

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: 22
          cache: pnpm

      - name: Install dependencies
        run: pnpm install --frozen-lockfile

      - name: Run database migrations
        run: pnpm exec prisma migrate deploy
        working-directory: apps/api
        env:
          DATABASE_URL: postgresql://acci_test:acci_test_pass@localhost:5433/acci_test?schema=public

      - name: Run tests
        run: pnpm --filter @acci/api test
        env:
          NODE_ENV: test
          DATABASE_URL: postgresql://acci_test:acci_test_pass@localhost:5433/acci_test?schema=public
          JWT_ACCESS_SECRET: ci_test_access_secret_at_least_32_chars_long
          JWT_REFRESH_SECRET: ci_test_refresh_secret_at_least_32_chars_long
          JWT_ACCESS_EXPIRES_IN: 15m
          JWT_REFRESH_EXPIRES_IN: 30d
          REFRESH_EXPIRES_DAYS: 30
          WEB_ORIGIN: http://localhost:3000
          COOKIE_SECURE: false
          COOKIE_SAMESITE: lax
          PORT: 4001
