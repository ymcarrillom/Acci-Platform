# ===== ACCI Platform — API Environment Variables =====
# Copy this file to .env and fill in the values

# General
NODE_ENV=development
PORT=4000

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/acci?schema=public

# JWT — REQUIRED in production (app will crash without them)
JWT_ACCESS_SECRET=change_me_to_a_random_string_64_chars
JWT_ACCESS_EXPIRES_IN=4h
JWT_REFRESH_SECRET=change_me_to_another_random_string_64_chars
JWT_REFRESH_EXPIRES_IN=30d
REFRESH_EXPIRES_DAYS=30

# Frontend origin (for CORS) — REQUIRED in production
WEB_ORIGIN=http://localhost:3000

# Cookies
COOKIE_SECURE=false
COOKIE_SAMESITE=lax
# COOKIE_DOMAIN=.yourdomain.com  # uncomment in production

# Logging
# LOG_LEVEL=info   # debug | info | warn | error (default: debug in dev, info in prod)

# Email / SMTP — Required in production for password reset emails
# Providers: Resend, SendGrid, Gmail SMTP, Mailgun, etc.
# SMTP_HOST=smtp.resend.com
# SMTP_PORT=587
# SMTP_USER=resend
# SMTP_PASS=re_your_api_key
# SMTP_FROM=noreply@yourdomain.com

# Sentry — Error tracking (optional, omit to disable)
# SENTRY_DSN=https://your_key@sentry.io/your_project_id

# Storage — 'local' (default) | 's3'
# STORAGE_PROVIDER=s3
#
# S3 / Cloudflare R2 — required when STORAGE_PROVIDER=s3
# S3_BUCKET=acci-videos
# S3_REGION=auto                     # 'auto' for R2, or e.g. 'us-east-1' for AWS
# S3_ENDPOINT=https://<account_id>.r2.cloudflarestorage.com  # R2 only
# S3_ACCESS_KEY_ID=your_access_key_id
# S3_SECRET_ACCESS_KEY=your_secret_access_key
# S3_PUBLIC_URL=                     # Optional CDN base URL (e.g. https://videos.acci.com)

# Seed — ONLY needed when running: pnpm prisma:seed
# Use strong passwords in production (min 12 chars, mix of upper/lower/number/symbol)
SEED_ADMIN_EMAIL=admin@yourdomain.com
SEED_ADMIN_PASSWORD=change_me_strong_password
SEED_RECOVERY_PASSWORD=change_me_strong_recovery_password
SEED_DEFAULT_PASSWORD=change_me_default_password
